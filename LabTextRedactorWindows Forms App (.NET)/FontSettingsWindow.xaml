<Window x:Class="LabTextRedactorWindowsFormsApp.FontSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки шрифта" Height="320" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шрифт -->
        <Label Grid.Row="0" Content="Шрифт:" FontWeight="Bold"/>
        <ComboBox x:Name="cmbFont" Grid.Row="1" Margin="0,0,0,10"/>

        <!-- Размер -->
        <Label Grid.Row="2" Content="Размер шрифта:" FontWeight="Bold"/>
        <Slider x:Name="sliderSize" Grid.Row="3" Minimum="8" Maximum="72"
                Value="12" TickFrequency="2" IsSnapToTickEnabled="True"
                AutoToolTipPlacement="BottomRight" Margin="0,0,0,10"/>

        <!-- Жирный / Курсив -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <CheckBox x:Name="chkBold" Content="Жирный" Margin="0,0,20,0"/>
            <CheckBox x:Name="chkItalic" Content="Курсив"/>
        </StackPanel>

        <!-- Превью -->
        <Border Grid.Row="5" BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="0,0,0,10">
            <TextBlock x:Name="previewText" Text="Пример текста — Preview 123"
                       TextWrapping="Wrap" VerticalAlignment="Center"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Применить" Width="90" Margin="0,0,10,0" Click="Apply_Click"/>
            <Button Content="Отмена"    Width="90" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
